{
    "name": "bachata-science",
    "version": "1.0.0",
    "description": "A catalog of the most common bachata dance steps",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean:build && webpack --mode production",
        "build:ts": "tsc --noEmit -p tsconfig.json",
        "clean:build": "rm -rf dist",
        "clean:dependencies": "rm -rf node_modules/ package-lock.json",
        "coverage": "nyc npm run test",
        "lint": "tslint -e 'node_modules/**' -p .",
        "lint:fix": "tslint -e 'node_modules/**' -p . --fix",
        "prettier": "prettier --list-different \"src/**/*.{ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
        "start": "node index.js",
        "start:dev": "webpack-dev-server --open --mode development",
        "test": "cucumber-js --require-module ts-node/register --require testing-environment.ts --require src/**/__step-definitions__/*.step.{ts,tsx} features/**/*.feature"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/L3bowski/bachata-science"
    },
    "keywords": [
        "bachata",
        "science"
    ],
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "bootstrap": "4.4.1",
        "express": "4.17.1",
        "jquery": "3.4.1",
        "popper.js": "1.16.1",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-router-dom": "5.1.2"
    },
    "devDependencies": {
        "@testing-library/react": "9.4.0",
        "@types/chai": "4.2.7",
        "@types/cucumber": "6.0.0",
        "@types/jsdom": "12.2.4",
        "@types/react": "16.9.17",
        "@types/react-dom": "16.9.4",
        "@types/react-router-dom": "5.1.3",
        "@types/sinon": "7.5.1",
        "awesome-typescript-loader": "5.2.1",
        "chai": "4.2.0",
        "css-loader": "3.4.1",
        "cucumber": "6.0.5",
        "html-loader": "0.5.5",
        "html-webpack-plugin": "3.2.0",
        "husky": "4.0.0",
        "jsdom": "15.2.1",
        "node-sass": "4.13.0",
        "nyc": "15.0.0",
        "prettier": "1.19.1",
        "sass-loader": "8.0.0",
        "sinon": "8.0.4",
        "style-loader": "1.1.2",
        "ts-node": "8.6.0",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "4.1.0",
        "typescript": "3.7.4",
        "webpack": "4.41.5",
        "webpack-cli": "3.3.10",
        "webpack-dev-server": "3.10.1"
    },
    "husky": {
        "pre-commit": "npm run lint && npm run prettier",
        "pre-push": "npm test"
    }
}
